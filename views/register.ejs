<%- include("./partial/head") %>

    <body class="column">
        <header class="row padding align border-bottom">
            <span class="max">
                <a href="/" class="logo text">yChurch</a>
            </span>
            <span class="row linklist">
                <a href="/login">Login</a>
                <a href="/register">Register</a>
                <a href="/about">About</a>
                <a href="/hep">Help</a>
            </span>
        </header>
        <main class="max column center">
            <section class="box mini border small-round padding">
                <h2 class="margin-bottom">Account Registration</h2>

                <small>
                    To create an account, add your full name, active email, church Identification number (CIN), and
                    choose a password.
                </small>

                <form action="" method="post" class="border-top margin-top">

                    <label for="fullname" class="label">Fill in the form</label>
                    <input type="text" name="fullname" id="fullname" placeholder="Enter Full name" required
                        class="input">

                    <label for="contact" class="label">
                        <small class="move-right muted" id="switcher">Use Phone</small>
                    </label>
                    <input type="email" name="contact" id="contact" placeholder="Enter Email" required class="input">

                    <div class="space"></div>
                    <input type="password" name="password" id="password" placeholder="Choose Password" class="input">
                    
                    <label for="validate"></label>
                    <input type="hidden" id="validate" class="input">

                    <div class="space"></div>
                    <input type="password" id="confirm" placeholder="Confirm Password" required
                        class="input">

                    <button type="submit" class="button">Register</button>
                </form>
            </section>
        </main>
        <footer class="padding center-align border-top">
            <span class="linklist">
                <a href="/about/ychurch">About Us</a>
                <a href="/about/ads">Advertise</a>
                <a href="/privacy/term">Terms</a>
                <a href="/privacy">Privacy</a>
            </span>
            <p>a Timothy T. Joe production</p>
            <p>&copy; 2024</p>
        </footer>
        <script type="module" src="/javascripts/register.js"></script>
    </body>

    </html>
<%- include("../partial/head") %>
  <body>
    <%- include("../partial/navbar") %>
    <menu class="row top-align main">
      <%- include("../partial/pane") %>
      <div class="pane column padding-bottom padding-top">
        <form action="/" method="post" class="max small-padding">
          <div class="full" id="one">

            <label for="name" class="label">Church Name</label>
            <input type="text" name="name" id="name" placeholder="Enter Name" class="input" required>
            <span class="space small"></span>

            <label for="address" class="label">Address</label>
            <input type="text" name="address" id="address" placeholder="Enter address" class="input" required>
            <span class="space small"></span>

            <label for="denomination" class="label">Denomination</label>
            <input type="text" name="denomination" id="denomination" placeholder="Enter address" class="input" required>
            <span class="space small"></span>

            <label for="logo" class="label">Church Emblem</label>
            <input type="file" name="logo" id="logo"  class="input" required>
            <span class="space small"></span>

            <label for="size" class="label">Congregation Size</label>
            <input type="text" name="size" id="size"  class="input" required>
            <span class="space small"></span>

            <label for="branch" class="label">Branch</label>
            <input type="text" name="branch" id="branch"  class="input" required>
            <span class="space small"></span>

            <label class="checkbox small-line"> 
             I acknowledge all information are valid and I have the authority to represent this church
              <input type="checkbox">
              <span class="checkmark" tabindex="7"></span>
          </label>
            
          </div>
          
        </form>
       
          <button class="primary" id="next">Save</button>
      </div>
      <div class="max border content">
        <section class="long">section</section>
      </div>
    </menu>
    <script type="module" src="/javascripts/church.js"></script>
  </body>
</html>
